{
  "name": "fluffyroll",
  "version": "1.0.0",
  "description": "Let's roll all your fluffs !",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "github-db": "^1.1.3",
    "node-sass": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "gh-pages": "^3.1.0"
  },
  "scripts": {
    "start": "cp ./config/app.dev.js ./src/config.js && react-scripts start",
    "build": "cp ./config/${CONFIG_FILE:=app.prod.js} ./src/config.js && react-scripts build",
    "lint": "eslint \"./src/**/*.{js,jsx}\"",
    "test": "cp ./config/app.dev-test.js ./src/config.js && react-scripts lint && react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smourph/fluffyroll.git"
  },
  "author": "Julien De Conti <julien.de.conti@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/smourph/fluffyroll/issues"
  },
  "homepage": "http://smourph.github.io/fluffyroll"
}
